# Application
NODE_ENV=production
PORT=3000
NEXTAUTH_URL=https://planmp.your-domain.com
CORS_ORIGIN=https://planmp.your-domain.com

# Database
SQL_PASSWORD=
DATABASE_URL=mssql://sa:${SQL_PASSWORD}@db:1433/PlanMP

# Redis
REDIS_PASSWORD=
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379

# Authentication
JWT_SECRET=
JWT_EXPIRATION=4h
SESSION_SECRET=

# Azure AD
NEXT_PUBLIC_AZURE_CLIENT_ID=
NEXT_PUBLIC_AZURE_TENANT_ID=
NEXT_PUBLIC_REDIRECT_URI=https://planmp.your-domain.com/auth/callback
AZURE_CLIENT_SECRET=

# Office 365
SHAREPOINT_SITE_ID=
SHAREPOINT_LIBRARY_NAME=PlanMP
SHAREPOINT_ROOT_FOLDER=Documentos

# Email Notifications
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@your-domain.com

# Monitoring
ENABLE_PERFORMANCE_MONITORING=true
APPLICATION_INSIGHTS_KEY=
ALERT_EMAIL=

# Backup
BACKUP_PATH=/backups
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 0 * * *"

# Security
ENCRYPTION_KEY=
ENABLE_SSL=true
SSL_CERT_PATH=/etc/ssl/certs/planmp.crt
SSL_KEY_PATH=/etc/ssl/private/planmp.key
MIN_PASSWORD_LENGTH=12
PASSWORD_EXPIRATION_DAYS=90
FAILED_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30
AUDIT_LOG_RETENTION_DAYS=90
ENABLE_DATA_MASKING=true
ENABLE_AUDIT_LOGS=true

# Cache
REDIS_CACHE_TTL=3600
ENABLE_RESPONSE_CACHE=true

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/planmp

# Performance
MAX_POOL_SIZE=20
STATEMENT_TIMEOUT=30000
IDLE_TIMEOUT=10000
CONNECTION_TIMEOUT=5000

# Feature Flags
ENABLE_SHAREPOINT_INTEGRATION=true
ENABLE_CALENDAR_SYNC=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_AUDIT_TRAIL=true 